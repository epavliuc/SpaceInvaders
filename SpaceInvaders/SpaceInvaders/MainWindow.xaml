<Window x:Class="SpaceInvaders.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SpaceInvaders"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="660" KeyDown="Window_KeyDown" ResizeMode="NoResize">
    <Grid>
        <Canvas x:Name="square" Width="650" Background="LightYellow" Margin="2,0,2.667,0">
            <Ellipse x:Name="player" x:FieldModifier="public" Width="50" Height="50" Fill="Blue" Canvas.Left="300" Canvas.Top="400" />
        </Canvas>

    </Grid>
</Window>
