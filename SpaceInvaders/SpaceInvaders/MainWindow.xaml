<Window x:Class="SpaceInvaders.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SpaceInvaders"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="700" KeyDown="Window_KeyDown">
    <Grid>
        <Canvas x:Name="square" Height="500" Width="650" Background="LightYellow">
            <Ellipse x:Name="player" Width="50" Height="50" Fill="Blue" Canvas.Left="300" Canvas.Top="400" />
        </Canvas>

    </Grid>
</Window>
